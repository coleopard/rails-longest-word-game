  <h1>New game</h1>

  <div class="letters">
    <% @letters.each do |letter| %>
      <p class = "letter"><%= letter.upcase %></p>
    <% end %>
  </div>



<form action="/score" method="post">
<label for="word">"What's your best word?"</label>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" name="word" placeholder="Your best word">
  <input type="hidden" name="letters" value=<%= @letters.join %>>

  <input type="submit" class = "btn btn-primary">
</form>

